@{

}
@model List<ItemData>


<header class="w-100">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 w-100  ">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Dashboard" asp-action="AdminDashboard"><img src="/1.jpg" style="width:30px; height:30px; border-radius:100%; " />  James Book Store Admin </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="AdminDashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Customer">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Items">Items</a>
                    </li>
                    <li class="nav-item" style="padding-left:64%">
                        <a class="nav-link btn btn-outline-danger " style="color:white;" asp-area="" asp-controller="Home" asp-action="Login">Logout</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="text-center text-white">
    <h3>Item List</h3>

</div>






<div>
    <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="CreateItem">Add Item</a>

</div>

<br />


<div class="text-white">

    <table id="example" class="table table-dark display compact" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>ISBN</th>
                <th>TITLE</th>
                <th>AUTHOR</th>
                <th>GENRE</th>
                <th>PRICE</th>
                <th>TYPE</th>
                <th>Actions</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var items in Model)
            {

                <tr>
                    <td>@items.item_id</td>
                    <td>@items.item_isbn</td>
                    <td>@items.item_title</td>
                    <td>@items.item_author</td>
                    <td>@items.item_genre</td>
                    <td>@items.item_price</td>
                    <td>@items.item_type</td>
                    <td>
                        <a class="btn btn-secondary btn-sm" asp-controller="Admin" asp-action="EditItems" asp-route-id="@items.item_id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="DeleteItems" asp-route-id="@items.item_id">Delete</a>
                    </td>


                   



                </tr>
            }

        </tbody>
    </table>

</div>
