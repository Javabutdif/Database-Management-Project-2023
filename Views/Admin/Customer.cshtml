<div class="text-center text-white">
    <h3>Customer List</h3>

</div>






<div>
    <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Create">Add Customer</a>

</div>

<br />

<body class="text-white">

    <table id="example" class="table table-dark display compact" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.c_id</td>
                    <td>@item.c_name</td>
                    <td>@item.c_email</td>
                    <td>@item.c_address</td>
                    <td class="d-inline-flex p-3 gap-2">
                        <a class="btn btn-secondary btn-sm" asp-controller="Admin" asp-action="Edit" asp-route-id="@item.c_id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.c_id">Delete</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
