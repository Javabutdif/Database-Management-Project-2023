<br />
<form asp-controller="Admin" asp-action="CreateItemAction" method="POST" style="color:white; align-content:center">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ISBN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="isbn">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Title</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="title">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">AUthor</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="author">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Genre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="genre">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="price">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Type</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="type">
        </div>
    </div>
   

    <div class="row mb-3">

        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class=" col-sm-3 d-grid">
            <a class="btn btn-danger" asp-controller="Admin" asp-action="Customer" role="button">Cancel</a>
        </div>
    </div>


</form>