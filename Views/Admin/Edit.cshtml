@{
}


<form asp-controller="Admin" asp-action="EditCustomer" method="POST" style="color:white">
    <input type="hidden" name="id" value="@ViewBag.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@ViewBag.name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@ViewBag.email">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@ViewBag.address">
        </div>
    </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-6">
            <input type="text" class="form-control" name="password" value="@ViewBag.password">
            </div>
        </div>
        <div class="row mb-3">

            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div class=" col-sm-3 d-grid">
                <a class="btn btn-danger" href="/Admin/Customer" role="button">Cancel</a>
            </div>
        </div>

    
</form>
